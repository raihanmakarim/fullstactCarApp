{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-console": "off", // Allow console.log() for development
        "no-unused-vars": "error", // Warn for unused variables
        "no-undef": "error", // Error for undeclared variables
        "prefer-const": "error", // Enforce using const for immutable variables
        "arrow-spacing": "error", // Enforce consistent spacing around arrow functions
        "indent": [
            "error",
            2
        ], // Enforce 2-space indentation
        "node/no-unsupported-features/es-syntax": "off"
    }
}